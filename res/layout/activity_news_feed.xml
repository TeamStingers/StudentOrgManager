<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seniordesign.studentorgmanager.NewsFeedActivity"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/orgTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/newsFeedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orgTitle"
        android:layout_centerHorizontal="true"
        android:text="News Feed"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/newsFeedList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newStoryButton"
        android:layout_below="@+id/newsFeedLabel"
        android:layout_centerHorizontal="true" >

    </ListView>

    <Button
        android:id="@+id/newStoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="New Story" />
    
 </RelativeLayout>
