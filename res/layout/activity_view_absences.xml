<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seniordesign.studentorgmanager.ViewAbsencesActivity"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/viewAbsencesEventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Event Title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/absentMembersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewAbsencesEventTitle"
        android:layout_centerHorizontal="true"
        android:text="Absent Members"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/absentMembersListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/absentMembersLabel"
        android:layout_centerHorizontal="true" >
    </ListView>

</RelativeLayout>
